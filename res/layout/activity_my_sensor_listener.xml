<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/getBufArrayAndClear" >

        <TextView
            android:id="@+id/textViewOutput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:text="@string/hello_world"
            tools:context=".MySensorListener" />
    </ScrollView>

    <Button
        android:id="@+id/getBufFrontBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/getBufFrontBtn" />

    <Button
        android:id="@+id/getBufRearBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/getBufFrontBtn"
        android:text="@string/getBufRearBtn" />

    <Button
        android:id="@+id/getBufArrayAndClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getBufRearBtn"
        android:text="@string/getBufArrayAndClear" />
    
</RelativeLayout>